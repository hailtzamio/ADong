<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    tools:context=".ui.product.DetailProductActivity">

    <RelativeLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:background="@color/colorHeader"
        android:layout_height="50dp">
        <ImageView
            android:padding="10dp"

            android:id="@+id/imvBack"

            android:layout_centerVertical="true"
            android:src="@drawable/icon_back"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:id="@+id/tvTitle"
            android:text="Title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:visibility="gone"
            android:enabled="false"
            android:textColor="@color/colorGray"
            android:text="Tạo Phiếu"
            android:layout_marginRight="5dp"
            android:id="@+id/rightButton"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <androidx.core.widget.NestedScrollView

        android:layout_below="@+id/view"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/tvList"
                android:textColor="@color/colorName"
                android:textStyle="bold"
                android:text="THÔNG TIN CHUNG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:textColor="@color/colorGray"
                    android:text="Tên dự án"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/tvName"
                    android:layout_alignParentRight="true"
                    tools:text="Tên "
                    android:ellipsize="end"
                    android:layout_width="200dp"
                    android:gravity="end"
                    app:autoSizeTextType="uniform"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:textColor="@color/colorGray"
                    android:text="Ngày dự kiến"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/tvDate"
                    android:layout_alignParentRight="true"
                    tools:text="Tên "
                    android:ellipsize="end"
                    android:layout_width="200dp"
                    android:gravity="end"
                    app:autoSizeTextType="uniform"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:id="@+id/rlNote"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:textColor="@color/colorGray"
                    android:text="Ghi chú"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/tvNote"
                    android:layout_alignParentRight="true"
                    tools:text="Tên "
                    android:ellipsize="end"
                    android:layout_width="200dp"
                    android:gravity="end"
                    app:autoSizeTextType="uniform"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rlNoteManu"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorGray"
                    android:text="Yêu cầu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <Spinner
                    android:gravity="end"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:paddingLeft="4dp"
                    android:id="@+id/spinType"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>



            <include
                layout="@layout/view_line"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp" />

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:textColor="@color/colorName"
                    android:textStyle="bold"
                    android:text="DANH SÁCH VẬT TƯ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>



</RelativeLayout>