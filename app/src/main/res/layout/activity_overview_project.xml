<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.product.CreateProductActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tvOk"
        android:layout_below="@+id/header">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <RelativeLayout
                android:id="@+id/basicInfo"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_info_height" >
                <ImageView
                    android:id="@+id/imvAva"
                    android:src="@drawable/check_green"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/ava_info_height"
                    android:layout_height="@dimen/ava_info_height" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imvAva"
                    android:text="Thông tin cơ bản"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_marginLeft="@dimen/view_magin_left"
                    android:background="@color/colorLine"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_line_height" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlProduct"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_info_height" >
                <ImageView
                    android:id="@+id/imvAva2"
                    android:src="@drawable/check_green"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/ava_info_height"
                    android:layout_height="@dimen/ava_info_height" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imvAva2"
                    android:text="Vật tư"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_marginLeft="@dimen/view_magin_left"
                    android:background="@color/colorLine"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_line_height" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_info_height" >
                <ImageView
                    android:id="@+id/imvAva3"
                    android:src="@drawable/check_green"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/ava_info_height"
                    android:layout_height="@dimen/ava_info_height" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imvAva3"
                    android:text="Đang phát triển"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_marginLeft="@dimen/view_magin_left"
                    android:background="@color/colorLine"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_line_height" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_info_height" >
                <ImageView
                    android:id="@+id/imvAva4"
                    android:src="@drawable/check_green"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/ava_info_height"
                    android:layout_height="@dimen/ava_info_height" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imvAva4"
                    android:text="Đang phát triển"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_marginLeft="@dimen/view_magin_left"
                    android:background="@color/colorLine"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_line_height" />

            </RelativeLayout>


        </LinearLayout>






    </androidx.core.widget.NestedScrollView>



</RelativeLayout>