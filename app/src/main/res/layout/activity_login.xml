<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="10dp"
    tools:context=".ui.activity.LoginActivity">

    <ImageView
        android:id="@+id/imvLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:id="@+id/rlUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imvLogo"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edt_size"
            android:background="@drawable/username_radius_layout"
            android:hint="Tên đăng nhập"
            android:paddingLeft="30dp"
            android:singleLine="true" />


        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlUsername"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edt_size"
            android:background="@drawable/password_radius_layout"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:singleLine="true" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/lock" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvOk"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_size"
        android:layout_below="@+id/rlPw"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_radius_bg_white_layout"
        android:gravity="center"
        android:text="ĐĂNG NHẬP"
        android:textColor="@color/colorHeader" />


    <TextView
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Công ty TNHH Nội thất &amp; QC Á Đông"
        android:textColor="@color/colorPrimary" />

</RelativeLayout>