<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.product.CreateProductActivity">

    <include
        android:id="@+id/header"
        layout="@layout/item_header_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:padding="20dp"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <EditText
                android:hint="Tên"
                android:paddingLeft="10dp"
                android:id="@+id/edtName"
                android:background="@drawable/button_normal_main_radius_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_size" />

            <EditText
                android:hint="Địa chỉ"
                android:paddingLeft="10dp"
                android:id="@+id/edtAddress"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_normal_main_radius_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_size" />

            <EditText
                android:inputType="phone"
                android:hint="Số điện thoại"
                android:paddingLeft="10dp"
                android:id="@+id/edtPhone"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_normal_main_radius_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_size" />

            <EditText
                android:inputType="phone"
                android:hint="Số điện thoại 2"
                android:paddingLeft="10dp"
                android:id="@+id/edtPhone2"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_normal_main_radius_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_size" />

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginRight="5dp"
                    android:id="@+id/recyclerViewTeamLeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tvChooseWorker"/>

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tvChooseWorker"
                    android:textColor="@color/white"
                    android:background="@color/colorName"
                    android:gravity="center"
                    android:text="CHỌN"
                    android:layout_alignParentRight="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tvChooseTeamLeader"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="CHỌN ĐỘI TRƯỞNG"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_radius_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_size" />

            <TextView
                android:id="@+id/tvChooseWorkers"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="CHỌN CÔNG NHÂN"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_radius_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_size" />

            <TextView
                android:id="@+id/tvOk"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="ĐỒNG Ý"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_radius_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_size" />




        </LinearLayout>

    </androidx.core.widget.NestedScrollView>





</RelativeLayout>