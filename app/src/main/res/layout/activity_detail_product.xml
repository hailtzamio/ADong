<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.product.DetailProductActivity">

    <include layout="@layout/item_header_layout"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:id="@+id/cropImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/view"
        android:background="@drawable/ava"
        />
    <LinearLayout
        android:padding="@dimen/padding_big_view"
        android:orientation="vertical"
        android:layout_below="@+id/cropImageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:textColor="@color/colorGray"
                android:text="Tên "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tvName"
                android:layout_alignParentRight="true"
                tools:text="Tên "
                android:ellipsize="end"
                android:layout_width="200dp"
                android:gravity="end"
                app:autoSizeTextType="uniform"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:textColor="@color/colorGray"
                android:text="Mã"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tvCode"
                android:layout_alignParentRight="true"
                tools:text="Tên "
                android:ellipsize="end"
                android:layout_width="200dp"
                android:gravity="end"
                app:autoSizeTextType="uniform"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:textColor="@color/colorGray"
                android:text="Loại "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tvType"
                android:ellipsize="end"
                android:layout_width="200dp"
                android:gravity="end"
                app:autoSizeTextType="uniform"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                tools:text="Tên " />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:textColor="@color/colorGray"
                android:text="Đơn vị tính "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tvUnit"
                android:layout_alignParentRight="true"
                tools:text="Tên "
                android:ellipsize="end"
                android:layout_width="200dp"
                android:gravity="end"
                app:autoSizeTextType="uniform"
                android:layout_height="wrap_content" />

        </RelativeLayout>



        <RelativeLayout
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:textColor="@color/colorGray"
                android:text="Số lượng "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tvQuantity"
                android:layout_alignParentRight="true"
                tools:text="Tên "
                android:ellipsize="end"
                android:layout_width="200dp"
                android:gravity="end"
                app:autoSizeTextType="uniform"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/tvOk"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="XÓA"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_size" />

</RelativeLayout>